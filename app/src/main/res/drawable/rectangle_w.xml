<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Black Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4" />
            <corners android:radius="180dp"/>
        </shape>
    </item>

    <!-- White Rectangle -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="180dp"/>
        </shape>
    </item>

</layer-list>
